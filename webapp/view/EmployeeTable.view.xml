<mvc:View
    controllerName="sap.ui.test.controller.EmployeeTable"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Table
        id="employeeTable"
        class="sapUiResponsiveMargin"
        width="auto"
        mode="MultiSelect"
        items="{employee>/Employees}">
        <headerToolbar>
            <OverflowToolbar>
            <Title text="Persons" />
            <ToolbarSpacer />
                <SearchField width="20%" search="onSearch" value="{/last_name}"></SearchField>
                <Button icon="sap-icon://sort" press="onSort" />
                <Button icon="sap-icon://delete" press="onDelete" />
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column>
                <Text text="Id" />
            </Column>
            <Column id="firstNameColumn">
                <Text text="First Name" />
            </Column>
            <Column>
                <Text text="Last Name" />
            </Column>
            <Column>
                <Text text="E-Mail" />
            </Column>
            <Column>
                <Text text="Gender" />
            </Column>
            <Column>
                <Text text="IP Address" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{employee>id}" />
                    <Text text="{employee>first_name}" />
                    <Text text="{employee>last_name}" />
                    <Text text="{employee>email}" />
                    <Text text="{employee>gender}" />
                    <Text text="{employee>ip_address}" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>